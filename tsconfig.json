{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,                
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*.ts", "src/types/environment.d.ts"],
  "exclude": ["node_modules"]
}
